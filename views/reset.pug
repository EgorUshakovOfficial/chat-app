html
  head
   title Login
   meta(name='description', content='Home page')
   meta(charset='utf-8')
   meta(http-equiv='X-UA-Compatible', content='IE=edge')
   meta(name='viewport', content='width=device-width, initial-scale=1')
   link(rel='stylesheet', href='/public/style.css')
   link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  body
   div(class="container")
    h1(id="title") Reset Your Password
    p Please enter a new password
    if error_msg != ''
     div(class="alert alert-success", role="alert") #{error_msg}
    form(method="post" id="email-form")
     div
      label Password:
      input(type='password', name='password' id="password-input", required)
     div 
      label Confirm Password:
      input(type='password', name='confirmPassword' id="confirm-input", required)
     div
      input(type="submit", value="Log In", id="submit", class="btn btn-primary btn-large")