html
  head
   title Registration
   meta(name='description', content='Home page')
   meta(charset='utf-8')
   meta(http-equiv='X-UA-Compatible', content='IE=edge')
   meta(name='viewport', content='width=device-width, initial-scale=1')
   link(rel='stylesheet', href='/public/style.css')
   link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  body
   div(class="container")
    h1(id="title") Registration 
    form(action="/register", method="post", id="form")
     div
      label First Name:
      input(type='text', name='firstName' id="first-input", required)
     div
      label Last Name:
      input(type='text', name='lastName', id='last-input' required)
     div
      label Username:
      input(type="text", name="username", id="username-input" required)
     div
      label Password:
      input(type="password", name="password", id="password-input", required)
     div
      input(type="submit", value="Submit", id="submit", class="btn btn-primary btn-large")