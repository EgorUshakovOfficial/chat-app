html
  head
   title Login
   meta(name='description', content='Home page')
   meta(charset='utf-8')
   meta(http-equiv='X-UA-Compatible', content='IE=edge')
   meta(name='viewport', content='width=device-width, initial-scale=1')
   link(rel='stylesheet', href='/public/style.css')
   link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  body
   div(class="container")
    h1(id="title") Find Your Account
    p Please enter your email to search for your account
    if success_msg != ''
     div(class="alert alert-success", role="alert") #{success_msg}
    form(action="/identity", method="post", id="email-form")
     div
      label Email:
      input(type='text', name='email' id="email-input", required)
     div
      input(type="submit", value="Log In", id="submit", class="btn btn-primary btn-large")